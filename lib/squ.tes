					-.;	!   break if .==0	!
					-1A-128-13"N ! if not <CR><LF>	!
						0;  ! break out of loop !
					'	!   endif		!
				'		! endif			!
			'		!       endif			!
		>			! ----loop end----------------- !
		QSJ			!       jump to where we startd !
		QT-27"E			!       if last char == ESC	!
			@I% %		!         insert <SP>		!
		'			!       endif			!
	'				!     endif			!
'					!   endif			!
Q0@I%%					! insert ^char			!
@O!DISP!				! try again			!

