		0A@^UQ%%		!     Q.str = arg		!
		D			!     delete arg		!
	|				!   else			!
		@^UQ%Y%			!     Q.str = "Y"		!
	'				!   endif			!
|					! else				!
	QB"T				!   if any other switches	!
		@^UQ%%			!     Q.str = ""		!
	|				!   else			!
		@I%Allow adjacent ESCapes (Y/N) <N>? %
		^^QMR			!     ask for /E value		!
	'				!   endif			!
'					! endif				!
0QQ"A					! if /E val is alphabetic	!
	0QQ&95-^^Y"E			!   if it's 'y' or 'Y'		!
		-1UH			!     H.num = -1 (TRUE)		!
	'				!   endif			!
'					! endif				!

